                                        </ul>
                                    </div>
                                </div>

                            </div>
        </main>
    </div>

    <script>
        function setupDropZone(dropZoneId, fileInputId, nameDisplayId) {
            const dropZone = document.getElementById(dropZoneId);
            const fileInput = document.getElementById(fileInputId);
            const nameDisplay = document.getElementById(nameDisplayId);

            // Click para abrir selector
            dropZone.addEventListener('click', () => fileInput.click());

            // Cambio en el input (cuando seleccionan manualmente)
            fileInput.addEventListener('change', () => {
                if (fileInput.files.length > 0) {
                    showFile(fileInput.files[0], nameDisplay);
                }
            });

            // Drag Over (Arrastrando encima)
            dropZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                dropZone.classList.add('dragover');
            });

            // Drag Leave (Saliendo del √°rea)
            dropZone.addEventListener('dragleave', () => {
                dropZone.classList.remove('dragover');
            });

            // Drop (Soltar archivo)
            dropZone.addEventListener('drop', (e) => {
                e.preventDefault();
                dropZone.classList.remove('dragover');

                if (e.dataTransfer.files.length > 0) {
                    fileInput.files = e.dataTransfer.files; // Asignar archivo al input
                    showFile(e.dataTransfer.files[0], nameDisplay);
                }
            });
        }

        function showFile(file, displayElement) {
            displayElement.style.display = 'block';
            displayElement.innerText = "üìÑ Archivo listo: " + file.name;
        }

        // Inicializar las dos zonas
        setupDropZone('drop-zone-user', 'file-user', 'name-user');
        setupDropZone('drop-zone-quest', 'file-quest', 'name-quest');
    </script>
</body>

</html>